# Explainable MoE Debugger Configuration

# Server Configuration
HOST=localhost
PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration (if needed for persistent storage)
DATABASE_URL=sqlite:///moe_debugger.db
REDIS_URL=redis://localhost:6379

# Model Configuration
DEFAULT_MODEL_PATH=""
MODEL_CACHE_DIR=./models
HUGGINGFACE_CACHE_DIR=./hf_cache

# Debugging Configuration
DEFAULT_SAMPLING_RATE=0.1
DEFAULT_BUFFER_SIZE=10000
MEMORY_LIMIT_MB=2048
ENABLE_GRADIENTS=false
ENABLE_ATTENTION_TRACKING=false

# Performance Configuration
MAX_CONCURRENT_SESSIONS=10
WEBSOCKET_TIMEOUT=300
API_RATE_LIMIT=100

# Security Configuration
ENABLE_AUTH=false
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=""

# Development Settings
DEV_MODE=true
ENABLE_CORS=true
AUTO_RELOAD=true

# Cloud Provider Settings (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

AZURE_SUBSCRIPTION_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""

GCP_PROJECT_ID=""
